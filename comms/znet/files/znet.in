#!/bin/sh

# PROVIDE: znet
# REQUIRE: networking
# KEYWORD:
#
# Add the following lines to /etc/rc.conf.local or /etc/rc.conf
# to enable this service:
#
# znet_enable (bool):          Set to NO by default.
#               Set it to YES to enable znet.
# znet_user (string):          Set user that znet will run under
#               Default is "nobody".
# znet_group (string):         Set group that znet will run under
#               Default is "nobody".
# znet_args (string):          Set extra arguments to pass to znet
#               Default is "".

. /etc/rc.subr

name="znet"
rcvar="znet_enable"
pidfile=/var/run/znet.pid
command="/usr/sbin/daemon"
procname="%%PREFIX%%/bin/znet"
command_args="-S -T ${name} -r -f -P ${pidfile} /usr/bin/env ${procname} ${znet_args}"

load_rc_config $name

: ${znet_enable:="NO"}
: ${znet_user:="nobody"}
: ${znet_group:="nobody"}
: ${znet_args:="znet --config /usr/local/etc/znet.yaml"}

run_rc_command "$1"
